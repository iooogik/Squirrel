<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Contacts">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            app:backgroundTint="@color/colorPrimary"
            app:maxImageSize="25dp"
            app:srcCompat="@drawable/arrow_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/rostelekom"
                android:text="@string/contactDev"
                android:textColor="@color/colorFont"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="25dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp">

                        <ImageButton
                            android:id="@+id/telegram"
                            style="@android:style/Widget.ImageButton"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/small_buttons"
                            android:scaleType="fitXY"
                            android:src="@drawable/telegram_icon" />

                        <ImageButton
                            android:id="@+id/gmail"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/small_buttons"
                            android:scaleType="fitCenter"
                            android:src="@drawable/gmail" />

                        <ImageButton
                            android:id="@+id/discord"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/small_buttons"
                            android:scaleType="fitCenter"
                            android:src="@drawable/discord" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_margin"
                            android:fontFamily="@font/rostelekom"
                            android:text="@string/telegram"
                            android:textColor="@color/colorFont" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_margin="@dimen/text_margin"
                            android:fontFamily="@font/rostelekom"
                            android:text="@string/gmail"
                            android:textColor="@color/colorFont" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_margin"
                            android:layout_weight="1"
                            android:fontFamily="@font/rostelekom"
                            android:text="@string/discord"
                            android:textColor="@color/colorFont" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageButton
                            android:id="@+id/vk"
                            style="@android:style/Widget.ImageButton"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/small_buttons"
                            android:scaleType="fitXY"
                            android:src="@drawable/vk_logo" />

                        <ImageButton
                            android:id="@+id/instagram"
                            style="@android:style/Widget.ImageButton"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/small_buttons"
                            android:scaleType="fitXY"
                            android:src="@drawable/instagram" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_margin"
                            android:fontFamily="@font/rostelekom"
                            android:text="@string/vk"
                            android:textColor="@color/colorFont" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/text_margin"
                            android:fontFamily="@font/rostelekom"
                            android:text="@string/instagram"
                            android:textColor="@color/colorFont" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>