<resources>

    <!-- Base application theme. -->
    <style name="Standart" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/rostelekom</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorFont</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:button">@style/ButtonsCustom</item>
        <item name="android:toolbarStyle">@style/ToolbarCustom</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:fontFamily">@font/rostelekom</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorFont</item>
        <item name="colorAccent">@color/colorFont</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textColorPrimary">@color/colorFont</item>
        <item name="textColorAlertDialogListItem">@color/colorFont</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="ButtonsCustom" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/rostelekom</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorFont</item>
        <item name="colorAccent">@color/colorFont</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textColorPrimary">@color/colorFont</item>
    </style>

    <style name="ToolbarCustom" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:colorActivatedHighlight">@color/colorLightFont</item>
        <item name="android:color">@color/colorFont</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
