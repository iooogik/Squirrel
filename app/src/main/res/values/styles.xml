<resources>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="android:textColor">@color/color_primary_text</item>

        <item name="buttonTint">?attr/colorAccent</item>

        <item name="colorPrimaryDark">@color/colorBackground_dark</item>

        <item name="background">@color/colorBackground_light</item>
        <item name="itemShapeFillColor">@color/colorWhite</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryDark">@color/colorBackground_dark</item>

        <item name="android:textColor">@color/colorWhite</item>

        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="background">@color/colorBackground_dark</item>

        <item name="itemShapeFillColor">@color/darkBackground</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
