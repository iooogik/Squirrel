<resources>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/color_primary_text</item>

        <item name="floatingActionButtonStyle">@style/customFabStandart</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/darkBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="imageButtonStyle">@style/customSmallButtons</item>

        <item name="floatingActionButtonStyle">@style/customFabDark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customSmallButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="customFabStandart" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="customFabDark" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="customFabRed" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccentRed</item>
    </style>

    <style name="customFabBlue" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccentBlue</item>
    </style>

    <style name="customFabYellow" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccentYellow</item>
    </style>

</resources>
